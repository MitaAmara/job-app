<div class="container" style="margin-top: 30px; margin-bottom:10px">
  <h1>Edit Profile</h1>

  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth, "Date of Birth" %><br />
      <%= f.text_field :date_of_birth, :id => 'datepicker', :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :address %><br />
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :graduate %><br />
      <%= f.text_field :graduate, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :experience %><br />
      <%= f.text_area :experience, cols: 20, rows: 8, :class => 'form-control' %>
    </div>
    <div class="actions"><%= f.submit "Edit" %></div>
<% end %>
</div>